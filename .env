# Hydroponic Monitor Environment Configuration
# Copy this file to .env and update with your actual values

# MQTT Configuration
MQTT_HOST=m0rb1d-server.mynetworksettings.com
MQTT_PORT=1883
MQTT_WS_PORT=8080
MQTT_WS_PATH=/mqtt
# Anonymous access enabled for test environment
MQTT_USERNAME=
MQTT_PASSWORD=

# InfluxDB Configuration  
# Switched to nginx reverse proxy path for consolidated access
INFLUX_URL=http://m0rb1d-server.mynetworksettings.com:8080/influxdb
INFLUX_TOKEN=test-token-for-integration-tests
INFLUX_ORG=test-org
INFLUX_BUCKET=test-bucket

# Video Stream Configuration
REAL_MJPEG=true
MJPEG_URL=http://raspberrypi:8000

# Debug Configuration
DEBUG=true

# Docker Compose Environment Variables (for container deployment)
PROXY_HTTP_PORT=8080
INFLUX_PORT=8086
INFLUX_ADMIN_USER=admin
INFLUX_ADMIN_PASSWORD=your-secure-password-here
INFLUX_ADMIN_TOKEN=your-secure-token-here
MQTT_TELEGRAF_PASSWORD=telegraf123
MQTT_CONTROLLER_PASSWORD=controller123