# Hydroponic Monitor Environment Configuration
# Copy this file to .env and update with your actual values

# MQTT Configuration
MQTT_HOST=m0rb1d-server.mynetworksettings.com
MQTT_PORT=1883
MQTT_USERNAME=hydro_user
MQTT_PASSWORD=your_mqtt_password_here

# InfluxDB Configuration (now prefers pathless base; nginx exposes /api/v2/* directly)
# Pathless via proxy (recommended): http://m0rb1d-server.mynetworksettings.com:8080
# Legacy prefixed (still supported for transition): http://m0rb1d-server.mynetworksettings.com:8080/influxdb
# Direct container (bypassing proxy): http://m0rb1d-server.mynetworksettings.com:8086
INFLUX_URL=http://m0rb1d-server.mynetworksettings.com:8080
INFLUX_TOKEN=your_influxdb_token_here
INFLUX_ORG=hydroponic-monitor
INFLUX_BUCKET=sensors

# Video Stream Configuration
MJPEG_URL=http://192.168.1.100:8080/stream

# Optional: Enable debug logging
DEBUG=true

# Docker Compose Environment Variables (for production deployment)
# If exposing the nginx proxy externally, you can override PROXY_HTTP_PORT
PROXY_HTTP_PORT=8080
# InfluxDB Configuration (container internal port remains 8086)
INFLUX_PORT=8086
INFLUX_ADMIN_USER=admin
INFLUX_ADMIN_PASSWORD=your-secure-password-here
INFLUX_ORG=hydroponic-org
INFLUX_BUCKET=grow_raw
INFLUX_ADMIN_TOKEN=your-secure-token-here

# MQTT Configuration  
# Standard TCP port stays 1883 for raw clients. If using WebSocket via nginx proxy,
# set MQTT_WS_PORT to the proxy port (e.g., 8080) and define MQTT_WS_PATH=/mqtt
MQTT_WS_PORT=9001
MQTT_WS_PATH=/mqtt
MQTT_TELEGRAF_PASSWORD=telegraf-secure-password
MQTT_CONTROLLER_PASSWORD=controller-secure-password

# Add device passwords as needed:
# MQTT_RPI_PASSWORD=rpi-device-password
# MQTT_PDU_PASSWORD=pdu-device-password