# Environment Configuration Template
# Copy this file to .env for local development
# Never commit the actual .env file with real values

# MQTT Broker Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=hydroponic_user
MQTT_PASSWORD=your_mqtt_password_here

# InfluxDB Configuration  
INFLUX_URL=http://localhost:8086
INFLUX_TOKEN=your_influxdb_token_here
INFLUX_ORG=hydroponic
INFLUX_BUCKET=sensors

# Video Feed Configuration
MJPEG_URL=http://192.168.1.100:8080/video

# Optional: Development/Debug Settings
DEBUG_MQTT_LOGS=false
DEBUG_SENSOR_DATA=false
MOCK_DATA_ENABLED=true

# Optional: Performance Settings
DATA_REFRESH_INTERVAL=2000
CHART_DATA_POINTS=100
MAX_ALERT_HISTORY=1000